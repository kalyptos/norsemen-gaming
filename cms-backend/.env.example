# FastAPI CMS Backend Configuration

# Application
APP_NAME="Norsemen Gaming CMS"
APP_VERSION="1.0.0"
SECRET_KEY="change-this-to-a-random-secret-key-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=720

# Admin User
ADMIN_USERNAME="admin"
ADMIN_PASSWORD="changeme"  # CHANGE THIS IN PRODUCTION!

# Git Provider (github or gitea)
GIT_PROVIDER="github"

# GitHub Configuration
GITHUB_TOKEN="your_github_personal_access_token"
GITHUB_REPO="kalyptos/norsemen-gaming"
GITHUB_BRANCH="main"

# Gitea Configuration (alternative to GitHub)
GITEA_URL="https://your-gitea-instance.com"
GITEA_TOKEN="your_gitea_access_token"
GITEA_REPO="username/norsemen-gaming"
GITEA_BRANCH="main"

# Hugo Content Path (in the repo)
CONTENT_PATH="content/posts"
IMAGES_PATH="static/images/uploads"

# CORS Origins (comma-separated)
CORS_ORIGINS="http://localhost:3000,http://localhost:8000,https://norsemen.ovh"
